#!/usr/bin/env bash
# Opens the lightweight DuckDuckGo interface with an optional search query.
# Usage: duckl [search terms...]

set -e
set -u
set -o pipefail

BROWSER="${BROWSER:-open}"

if [ $# -eq 0 ]; then
  "$BROWSER" 'https://lite.duckduckgo.com'
else
  args="$*"
  search="${args// /+}"
  "$BROWSER" "https://lite.duckduckgo.com/lite?q=$search"
fi